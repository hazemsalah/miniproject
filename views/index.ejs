                <form>
                            <input type="radio" name ="type" id ="link1" value="link" onclick="showinput()" >Link<br>
                            <input type="radio" name ="type" id="picture1" value="picture"onclick="showinput()" >Picture<br>
          
                            <br>
                            <script>
                                function showinput(){          
                                    var link=document.getElementById("link1"); 
                                    var picture=document.getElementById("picture1"); 
                                    if (link.checked){
                                         document.getElementById("fileInput").disabled=true;
                                         document.getElementById("InputLink").disabled=false;
                                        document.getElementById("fileInput").value="";
                                    }
                                     if (picture.checked){
                                         document.getElementById("fileInput").disabled=false;
                                         document.getElementById("InputLink").disabled=true;
                                         document.getElementById("InputLink").value="";
                                    }
                                         
                                }
                            </script>
                        </form>
